{% extends 'base.html.twig' %}

{% block title %}Recette - {{ recipe.name }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h1 class="mb-0">{{ recipe.name }}</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h3>Informations</h3>
                    <ul class="list-group mb-4">
                        <li class="list-group-item"><strong>Temps de préparation :</strong> {{ recipe.preparationTime }} minutes</li>
                        <li class="list-group-item"><strong>Difficulté :</strong> {{ recipe.difficulty }}</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <h3>Ingrédients</h3>
                    <ul class="list-group mb-4">
                        {% for ingredient in recipe.ingredients %}
                            <li class="list-group-item">
                                {{ ingredient.quantity }} {{ ingredient.unit }} de {{ ingredient.name }}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="mt-4">
                <h3>Étapes</h3>
                <p>{{ recipe.steps }}</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
